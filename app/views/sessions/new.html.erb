<h1>Log In - StudioB</h1>

<% if flash[:notice] %>
    <%= flash[:notice] %>
    <br>
    <br>
<% end %>

<%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit "Log In" %>
<% end %>