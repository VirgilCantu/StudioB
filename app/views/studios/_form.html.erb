<%= form_for @studio do |f| %>
    <%= f.hidden_field :studio_manager_id, value: current_user.id %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :location %>
    <br>
    <%= f.text_field :location %>
    <br>
    <br>
    <%= f.label :hourly_rate, "Studio Hourly Rate (USD)" %>
    <br>
    <%= f.number_field :hourly_rate %>
    <br>
    <br>
    <%= f.label :features, "Studio Features and Amenities" %>
    <br>
    <%= f.text_area :features %>
    <br>
    <br>
    <%= f.label :description, "Studio Description" %>
    <br>
    <%= f.text_area :description %>
    <br>
    <br>
    <%= f.label :picture, "Picture Link" %>
    <br>
    <%= f.text_field :picture %>
    <br>
    <br>
    <%= f.submit %>
<% end %>